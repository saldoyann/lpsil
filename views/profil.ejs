<form method="post">
  <p>
    <input type="hidden" name="idUser" value="<%= id %>">
  </p>
  <p>
    <input type="text" name="nomUser" value="<%= nom %>">
  </p>
  <p>
    <input type="text" name="prenomUser" value="<%= prenom %>">
